CC=gcc
LDFLAGS=-Wall 

all : VIGENERE lancement clean

FONCTIONS_COMMUNES.o : FONCTIONS_COMMUNES.c
	$(CC) -c FONCTIONS_COMMUNES.c $(LDFLAGS)

CHIFFREMENT_VIGENERE.o : CHIFFREMENT_VIGENERE.c 
	$(CC) -c CHIFFREMENT_VIGENERE.c $(LDFLAGS)

CRYPTANALYSE_VIGENERE.o : CRYPTANALYSE_VIGENERE.c
	$(CC) -c CRYPTANALYSE_VIGENERE.c $(LDFLAGS)

MAIN.o : MAIN.c
	$(CC) -c MAIN.c $(LDFLAGS)

VIGENERE : FONCTIONS_COMMUNES.o CHIFFREMENT_VIGENERE.o CRYPTANALYSE_VIGENERE.o MAIN.o
	$(CC) -o VIGENERE FONCTIONS_COMMUNES.o CHIFFREMENT_VIGENERE.o CRYPTANALYSE_VIGENERE.o MAIN.o $(LDFLAGS)

lancement :
	./VIGENERE
	
clean: 
	rm -rf *.o
	
mrproper: clean
	rm -rf VIGENERE

